<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/selectedFood" app:fontFamily="@font/muli_bold"
            android:textSize="24sp" android:lineSpacingExtra="30sp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.318"/>
    <ImageView
            android:layout_width="93dp"
            android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="110dp" tools:layout_editor_absoluteX="157dp"/>
    <Button
            android:text="DECIDED"
            android:layout_width="353dp"
            android:layout_height="44dp" android:id="@+id/btnSpin" tools:layout_editor_absoluteY="671dp"
            tools:layout_editor_absoluteX="32dp"/>
    <Button
            android:text="ADD FOOD"
            android:layout_width="161dp"
            android:layout_height="46dp" android:id="@+id/btnAdd" tools:layout_editor_absoluteY="552dp"
            tools:layout_editor_absoluteX="125dp" android:background="@color/colorPrimaryDark"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/addfoodTxt" tools:layout_editor_absoluteY="356dp" tools:layout_editor_absoluteX="109dp"/>

</android.support.constraint.ConstraintLayout>